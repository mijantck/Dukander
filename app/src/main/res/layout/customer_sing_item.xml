<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cutomer_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:paddingLeft="5dp"
        >

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/cutomer_name_textview"
            android:textColor="#000"
            android:textSize="20dp"
            android:text="Mijanur Rahman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/cutomer_number_textview"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="01733883310"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/cutomer_taka_textview"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="1930.090"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/cutomer_addrees_textview"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="House No. 03,Road no. 11,Nikunja-2, Khilkhet,Dhaka-1229 Bangladesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</LinearLayout>