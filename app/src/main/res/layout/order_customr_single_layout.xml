<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/orderProductPicURL"
                android:scaleType="fitXY"
                android:src="@drawable/textimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/orderProductName"
                android:textSize="20dp"
                android:maxLines="1"
                android:scrollbars="horizontal"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Product Name "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderProductCode"
                android:maxLines="1"
                android:scrollbars="horizontal"
                android:textColor="@color/listview_group_text_color_after"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Product Code "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderProductQuantity"
                android:maxLines="1"
                android:scrollbars="horizontal"
                android:textColor="@color/listview_group_text_color_after"
                android:text="Product Quantity "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderProductPrice"
                android:maxLines="1"
                android:scrollbars="horizontal"
                android:textColor="@color/listview_group_text_color_after"
                android:text="Product Price "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderProductDate"
                android:maxLines="1"
                android:scrollbars="horizontal"
                android:textColor="@color/listview_group_text_color_after"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Product Date "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="17dp"
                android:text="Order Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/orderProducCinfimeTexview"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="17dp"
                android:text="Confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/productWonerLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textSize="17dp"
                    android:text="Order Confirmation "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/orderProductConfimeOrCancel"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textSize="17dp"
                    android:text="Confirm / cancel"
                    android:background="@drawable/text_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textSize="17dp"
                    android:text="Delivery boy Select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/orderProductDeliveyBoySecelt"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textSize="17dp"
                    android:text="Select"
                    android:background="@drawable/text_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/deliveryBoyLayout"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="17dp"
                android:text="Delivery Boy info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/orderProductDeliveryBoyName"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="15dp"
                android:text="Mijanur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderProductDeliveryBoyPhone"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="15dp"
                android:text="01733-883310"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:text="COSTUMER INFO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderCustomertName"
                android:scrollbars="horizontal"
                android:maxLines="1"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Name "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderCustomertPhone"
                android:scrollbars="horizontal"
                android:maxLines="1"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="01733-883310 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderCustomertAddress"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Takterchala,Hatibanda "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:text="SHOP INFO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/orderShopName"
                android:scrollbars="horizontal"
                android:maxLines="1"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Name "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderShopPhone"
                android:scrollbars="horizontal"
                android:maxLines="1"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="01733-883310 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderShopAddress"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Takterchala,Hatibanda "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

</LinearLayout>

</LinearLayout>