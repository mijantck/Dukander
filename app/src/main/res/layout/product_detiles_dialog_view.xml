<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/productImageDetail"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/textimage"
                android:layout_height="250dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5">

                    <TextView
                        android:text="Name :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ProductNameDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Code :"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ProductCode"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="6"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/inStockDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="In stock"
                        android:textSize="12sp"
                        android:textColor="@color/color_texmenutop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                   <EditText
                       android:id="@+id/productQuantidyfromCustomer"
                       android:layout_width="match_parent"
                       android:hint="@string/quantidy"
                       android:background="@null"
                       android:inputType="numberDecimal"
                       android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/productPriceDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 00"
                        android:padding="2dp"
                        android:gravity="center"
                        android:background="@drawable/text_round"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:text="Shop Details"
            android:fontFamily="@font/nunito_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="5dp"

               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:padding="3dp"
                   android:layout_marginRight="10dp"
                   android:src="@drawable/icons_shop"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/shopDetailName"
                   android:text=""
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
           </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icons_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/shopDetailPhone"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icons_shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/shopDetailAddress"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <Button
            android:text="Order now"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</LinearLayout>