<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/textimage"
        android:scaleType="fitXY"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dukanname"
        android:fontFamily="@font/adamina"
        android:text="Dukandar "
        android:layout_marginLeft="10dp"
        android:textColor="#FFF"
        android:layout_below="@id/appCompatImageView"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/adamina"
        android:layout_height="wrap_content"
        android:id="@+id/dukanPhone"
        android:text="Phone "
        android:layout_marginLeft="10dp"
        android:textColor="#FFF"
        android:layout_below="@id/dukanname"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddresTextView"
        android:text="Addres "
        android:textColor="#FFF"
        android:fontFamily="@font/adamina"
        android:layout_below="@id/dukanPhone"/>


</RelativeLayout>