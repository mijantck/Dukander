<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg"
    android:fitsSystemWindows="true"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_support"
            android:layout_width="match_parent"
            app:titleTextColor="#ffff"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="10dp"
            >


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                  android:layout_weight="3"
                    >

                    <TextView
                        android:textSize="20dp"
                        android:textColor="#FFFF"
                        android:gravity="center_vertical"
                        android:text="দোকানদার"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textColor="#FFFF"
                        android:gravity="fill_vertical"
                        android:fontFamily="@font/adamina"
                        android:text="58924"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>




            </LinearLayout>




        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/list_item_recyclearviews"
            android:layout_below="@id/toolbar_support"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:weightSum="4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/minimumPruduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />




            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dueCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </LinearLayout>
        </LinearLayout>



        <ScrollView
            android:layout_below="@id/list_item_recyclearviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_below="@id/list_item_recyclearviews"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
           >

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="150dp"
                    android:layout_weight="1">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/salecard"
                        android:elevation="10dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_add_shopping"
                            android:layout_marginBottom="15dp"
                             />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/adamina"
                            android:gravity="center"
                            android:text="Sale"
                            android:textColor="#000"
                            android:textSize="15dp" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="150dp"
                    android:layout_weight="1">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/todaysale"
                        android:elevation="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_today"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:fontFamily="@font/adamina"
                            android:text="Today Sale"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/imvesment"
                        android:elevation="10dp"
                      android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_withdrow"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="Investment"
                            android:textSize="15dp"
                            android:fontFamily="@font/adamina"
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="150dp"
                    android:layout_weight="1">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/withdraw"
                        android:elevation="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_invesment"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="withdraw"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:fontFamily="@font/adamina"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
        </ScrollView>



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>