<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaleoOneActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_support"
        android:layout_width="match_parent"
        app:titleTextColor="#ffff"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >

                <TextView
                    android:textSize="20dp"
                    android:textColor="#FFFF"
                    android:gravity="center_vertical"
                    android:text="দোকানদার"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>




        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>

    <LinearLayout

        android:id="@+id/saleFondSide"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:textSize="20dp"
        android:fontFamily="@font/adamina"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Choose  the customer "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView

            android:layout_width="100dp"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/customerList"
                android:background="@drawable/rounded_corner"
                android:src="@drawable/ic_list"
                android:layout_width="100dp"
                android:layout_height="100dp"/>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/unknownCustomer"
                android:background="@drawable/rounded_corner"
                android:src="@drawable/person"
                android:layout_width="100dp"
                android:layout_height="100dp"/>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/salecustomerlist"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/saleCustomerlistRecyclearView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>





    </LinearLayout>


    </LinearLayout>
